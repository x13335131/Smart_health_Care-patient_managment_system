<div class="btn-group">
    <%= button_to 'reports and appointments', patients_report_path, :class=>"btn_reports", :method => :get %>
    
    
</div>
<h1>Patients</h1>
<%= form_tag(patients_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], :style=>'margin-left:5%;' , placeholder: "Search Patients" %>
<%= submit_tag "Search" %>
<% end %>

	<div class="index-form">
		<div class="jumbotron">
		    <!--listing all patients -->
		     <table class="data_table">
       <thead>
    <tr>
      <th>First name</th>
      <th>Surname</th>
      <th>Dob </th>
      <th>Address</th>
      <th>Phone no</th>
      <th>Condition</th>
      <th>Visited</th>
      <th>Next Apt</th>
      <th>Doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
<% if @patients.present? %>
   <% @patients.each do |patient| %>

  
        <td><%= patient.fname %></td>
        <td><%= patient.sname %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.address %></td>
        <td>0<%= patient.phone_no %></td>
        <td><%= patient.condition.name %></td>
        <td><%= patient.visited %></td>
        <td><%= patient.next_apt %></td>
        <td><%= patient.user.fname %></td>
       <!-- <td><%= link_to 'Report', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
       <% end %>
      </tbody>
    </table>
   
<% else %>
  <p>There are no patients containing the term(s) <%= params[:search] %>.</p>
<% end %>
<br>

<%= link_to 'New Patient', new_patient_path %>
    </div>
      | <%= link_to 'Return to user profile', :back %>
  </div>